<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.2</TargetFramework>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

   <ItemGroup>
    <None Update="Resources/gamecontrollerdb.txt" Link="%(Filename)%(Extension)" CopyToOutputDirectory="PreserveNewest" />
    <None Update="Resources/Images/*" Link="Images/%(Filename)%(Extension)" CopyToOutputDirectory="PreserveNewest" />
    <None Update="Resources/Fonts/**/*.ttf" Link="Fonts/%(Filename)%(Extension)" CopyToOutputDirectory="PreserveNewest" />
    <None Update="Resources/Lib/Windows/SDL*/x64/*.dll" Link="%(Filename)%(Extension)" Condition="'$(OS)' == 'Windows'" CopyToOutputDirectory="PreserveNewest" />
    <None Update="Resources/Lib/Windows/ffmpeg*/x64/bin/*.dll" Link="%(Filename)%(Extension)" Condition="'$(OS)' == 'Windows'" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FFmpeg.AutoGen" Version="4.0.0.3" />
    <PackageReference Include="OpenXbox.XboxWebApi" Version="0.2.4" />
    <PackageReference Include="SDL2-CS-Rolling" Version="2018.11.1" />
  </ItemGroup>

  <ItemGroup Condition="'$(Configuration)' == 'Release'">
    <PackageReference Include="OpenXbox.SmartGlass.Common" Version="1.0.3" />
    <PackageReference Include="OpenXbox.SmartGlass" Version="1.0.3" />
    <PackageReference Include="OpenXbox.SmartGlass.Nano" Version="1.0.3" />
  </ItemGroup>

  <ItemGroup Condition="'$(Configuration)' == 'Debug'">
    <ProjectReference Include="..\Includes\SmartGlass\SmartGlass\SmartGlass.csproj" />
    <ProjectReference Include="..\Includes\SmartGlass\SmartGlass.Common\SmartGlass.Common.csproj" />
    <ProjectReference Include="..\Includes\SmartGlass\SmartGlass.Nano\SmartGlass.Nano.csproj" />
  </ItemGroup>

</Project>
